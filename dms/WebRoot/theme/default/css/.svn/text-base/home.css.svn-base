a {text-decoration:underline; color:#1e5494;}
a:hover {text-decoration:underline; color:#ff0000;}


* { margin:0; padding:0; list-style:none;}
html { height:100%; overflow:hidden; background:#fff; font-family:Arial, Helvetica, sans-serif;}
body { height:100%; overflow:hidden; background:#fff;}
/*---ie6---*/
html {*padding:79px 0px 0px 0px;}


/*===============header css================*/
.bolt_header {position:absolute; font-size:12px; left:0px; top:0px; overflow:hidden; width:100%; background:url(../images/header_bg.jpg) repeat-x left top; height:79px;}
/*---ie6---*/
.bolt_header {*height:79px; *margin-top:0px; *position:absolute; *top:0; *right:0; *bottom:0; *left:0;}
.logo {float:left; margin-left:20px; display:inline; text-align:left; overflow:hidden; width:300px;}
.user { margin-left:30px; margin-top:10px; padding-left:20px; display:inline; width:160px; overflow:hidden; text-align:left; background:url(../images/user.gif) left 3px no-repeat; line-height:25px;}
.close {position:absolute; right:0px; top:10px; line-height:25px; overflow:hidden;  text-align:right; font-size:12px;}
.close span {margin-right:10px; display:inline; overflow:hidden;}
.close p {float:right; overflow:hidden; background:url(../images/prompt_bg.jpg) left top no-repeat; width:311px; height:26px; line-height:26px; margin-top:16px; text-indent:38px; text-align:left; font-size:12px; color:#012a4a;}





